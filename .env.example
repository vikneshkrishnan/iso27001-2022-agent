# Application Configuration
DEBUG=True
APP_NAME="Document Extraction System"
APP_VERSION="1.0.0"

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=[".pdf", ".png", ".jpg", ".jpeg", ".tiff", ".bmp"]
UPLOAD_DIR=uploads
OUTPUT_DIR=data

# Database Configuration (disabled for now)
DATABASE_URL=sqlite:///./documents.db
DATABASE_ECHO=false

# Redis Configuration (disabled for now)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Celery Configuration (disabled for now)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_MAX_RETRIES=3
CELERY_RETRY_DELAY=60

# Processing Configuration
MAX_PARALLEL_TASKS=1
TASK_TIMEOUT=300

# OCR Configuration (optional - will work without it)
TESSERACT_PATH=/opt/homebrew/bin/tesseract
OCR_LANGUAGES=["eng"]
OCR_CONFIDENCE_THRESHOLD=0.6

# PDF Processing Configuration
PDF_DPI=300
PDF_MAX_PAGES=100

# NLP Configuration (disabled)
SPACY_MODEL=en_core_web_sm
NER_CONFIDENCE_THRESHOLD=0.8

# Monitoring Configuration (disabled)
METRICS_ENABLED=false
METRICS_PORT=9090
LOG_LEVEL=INFO

# CrewAI Configuration
CREWAI_MAX_EXECUTION_TIME=120
CREWAI_VERBOSE=false

# Quality Validation Configuration
MIN_EXTRACTION_CONFIDENCE=0.7
MIN_TEXT_LENGTH=10

# LLM API Configuration - REPLACE WITH YOUR ACTUAL KEYS
OPENAI_API_KEY=your-openai-api-key-here

# Pinecone Vector Database Configuration - REPLACE WITH YOUR ACTUAL KEYS
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=iso27001
PINECONE_DIMENSION=1024

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=100
MAX_EMBEDDING_TOKENS=8191